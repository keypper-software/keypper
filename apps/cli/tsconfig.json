{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "plugins": [{ "transform": "typescript-transform-paths" }] 
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
